{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Information"
    }
  },
  "CosmosDb": {
    "DatabaseName": "MarketplaceDB",
    "ContainerNames": {
      "Users": "Users",
      "Products": "Products",
      "Carts": "Carts",
      "Orders": "Orders",
      "Categories": "Categories",
      "CarouselSlides": "CarouselSlides"
    }
  },
  "CacheSettings": {
    "EnableCaching": true,
    "CategoriesExpirationMinutes": 5,
    "ProductsExpirationMinutes": 5,
    "CarouselSlidesExpirationMinutes": 5,
    "SingleItemExpirationMinutes": 5,
    "SearchResultsMaxCacheSize": 500
  },
  "EmailSettings": {
    "EnableEmailSending": false
  },
  "JwtSettings": {
    "Secret": "IN_PRODUCTION_WE_GET_THIS_FROM_KEY_VAULT_AT_LEAST_32_CHARS",
    "Issuer": "BACKEND_DOMAIN",
    "Audience": "FRONTEND_DOMAIN",
    "GuestTokenExpirationDays": 30
  }
}
