{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "command": "dotnet",
      "type": "shell",
      "args": ["build", "${workspaceFolder}/Api/Api.csproj", "-c", "Debug"],
      "problemMatcher": "$msCompile",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "watch",
      "command": "dotnet",
      "type": "shell",
      "args": [
        "watch",
        "run",
        "--project",
        "${workspaceFolder}/Api/Api.csproj",
        "--launch-profile",
        "https"
      ],
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^.*$",
          "file": 1,
          "location": 2,
          "message": 3
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*Starting hot reload server.*",
          "endsPattern": "^.*Application started.*"
        }
      }
    },
    {
      "label": "test",
      "command": "dotnet",
      "type": "shell",
      "args": ["test", "${workspaceFolder}/Api.Tests/Api.Tests.csproj"],
      "problemMatcher": "$msCompile",
      "group": {
        "kind": "test",
        "isDefault": true
      }
    }
  ]
}
